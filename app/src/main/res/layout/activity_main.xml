<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.nebulastudio.flabfit.flaborfit.MainActivity"
    android:padding="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:id="@+id/weightBtn">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/weight"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView"
                android:src="@drawable/weight"
                android:contentDescription="weight icon"
                tools:ignore="HardcodedText" />

            <TextView
                android:text="Weight Lifting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:paddingLeft="10dp"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp" />

            <TextView
                android:text="Do you even Lift?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp" />

            <TextView
                android:text="30%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:paddingRight="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp" />

            <TextView
                android:text="10 Sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/textView4"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:paddingRight="10dp"
                android:padding="5dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#30111111" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#916bcd"
            android:layout_weight="1"
            android:id="@+id/yogaBtn">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/lotus"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView"
                android:src="@drawable/lotus"
                android:contentDescription="weight icon"
                tools:ignore="HardcodedText" />

            <TextView
                android:text="Yoga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:paddingLeft="10dp"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp" />

            <TextView
                android:text="Namaste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp" />

            <TextView
                android:text="10%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:paddingRight="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp" />

            <TextView
                android:text="1 hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/textView4"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:paddingRight="10dp"
                android:padding="5dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#30111111" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#52ad56"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/cardioBtn">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/heart"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView"
                android:src="@drawable/heart"
                android:contentDescription="weight icon"
                tools:ignore="HardcodedText" />

            <TextView
                android:text="Cardio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:paddingLeft="10dp"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp" />

            <TextView
                android:text="Run like crazy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp" />

            <TextView
                android:text="22%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:paddingRight="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp" />

            <TextView
                android:text="10 miles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/textView4"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:paddingRight="10dp"
                android:padding="5dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#30111111" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
